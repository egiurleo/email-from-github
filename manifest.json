{
  "manifest_version": 2,

  "name": "Email From Github",
  "description": "This extension allows the user to get someone's email from their GitHub profile",
  "version": "1.0",
  "background": {
   "scripts": ["content.js"],
   "persistent": false
 },
 "page_action" :
 {
   "default_icon" : "icon.png",
   "default_title" : "There's a 'G' in this URL!",
   "default_popup": "popup.html"
 },
 "permissions" : [
   "declarativeContent",
   "tabs"
 ]
}
