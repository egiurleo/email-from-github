{
  "manifest_version": 2,

  "name": "Email From Github",
  "description": "This extension allows the user to get someone's email from their GitHub profile",
  "version": "1.0",
  "background": {
   "scripts": ["content.js"],
   "persistent": false
 },
 "page_action" :
 {
   "default_icon" : "icon16.png",
   "default_title" : "Get this user's email!",
   "default_popup": "popup.html"
 },
 "icons":
 {
   "16": "icon16.png",
   "48": "icon48.png",
   "128": "icon128.png"
 },
 "permissions" : [
   "declarativeContent",
   "tabs"
 ]
}
